<section class="cover" style="height:150px;background:#466a7e;">
  <div class="container custom-container mt16">
    <span>Home / Search & Filter</span>
    <h2 style="font-weight: bolder;">Search <%= @destination.name %></h2>
  </div>
</section>

<div class="container custom-container">
  <%= simple_form_for :search, url: search_voyages_path, method: :get do |f| %>
    <div class="row mb32 mt64">
      <%= render partial: "includes/search/top_search_form", locals: { f: f } %>
    </div>
    <hr>
    <div class="flex sm-tablet-column">
      <%= render partial: "includes/search/voyage_filters", locals: { f: f } %>
      <section class="pt32 search-results">
      <% if @no_results %>
        <p class="msg text-center">You have ventured too far out to sea. Try using fewer filters. Here are some voyage that you might like instead.</p>
      <% end -%>
        <% @results.each do |voyage_name, bundle| %>
          <%= render partial: "includes/search/voyage_bundle", locals: { voyage: bundle.first, bundle: bundle } %>
        <% end -%>
      </section>
    </div>
  <% end -%>
</div>
