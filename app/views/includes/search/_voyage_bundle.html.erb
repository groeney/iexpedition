<div class="voyage-bundle">
  <div class="flex mobile-column">
    <div class="image-pile">
      <%= image_tag("missing-voyage.png") %>
    </div>
    <div class="content-pile flex-column">
      <h3><%= voyage.name %></h3>
      <h4><%= voyage.ship.name %></h4>
      <div class="search-voyage-description"><%= !voyage.overview_tile.blank? ? simple_format(voyage.overview_tile) : simple_format("Lorem ipsum Est sint aute non elit nostrud anim pariatur. Lorem ipsum Veniam Duis enim Ut mollit enim in id sit sit do cupidatat. Lorem ipsum Eu culpa mollit velit Ut adipisicing. \n\n Lorem ipsum Sint id enim dolor est dolor. Lorem ipsum Deserunt consectetur") %></div>
      <table>
        <% bundle.each do |voyage| %>
          <tr>
            <td class="search-date"><%= voyage.formatted_start_date %> - <%= voyage.formatted_end_date %></td>
            <td class="search-price">From <%= voyage.decorate.from_price %><em>pp</em></td>
          </tr>
        <% end -%>
      </table>
      <div class="search-explore-buttons flex">
        <a href="<%= voyage_path(voyage) %>" class="search-explore-button">Explore voyage</a>
        <div class="search-star flex favourite-voyage" data-voyage-id="<%= bundle.first.id %>">
          <i class="fa <%= voyage_in_wishlist?(voyage) ? 'fa-star' : 'fa-star-o' %>"></i>
        </div>
      </div>
    </div>
  </div>
</div>
