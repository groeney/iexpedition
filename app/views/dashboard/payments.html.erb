<section class="payments_page">
  <div class="row">
    <div class="col-lg-12">
      <h5>Your iExpedition Invoice</h5>
      <div class="over-auto">
        <table class="text-uppercase">
          <thead>
            <tr class="section_line">
              <th>order id</th>
              <th>type</th>
              <th>date</th>
              <th>voyage</th>
              <th class="text-center">pay invoice</th>
              <th class="text-center">download pdf</th>
            </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %></td>
              <td>Deposit</td>
              <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
              <td><%= order.voyage.name %></td>

              <% if order.deposit_invoice_link.blank? %>
                <td>Not yet available</td>
              <% else %>
                <td><%= link_to 'pay invoice', order.deposit_invoice_link, class: 'btn btn-filled btn-h-50' %></td>
              <% end -%>

              <% if order.deposit_invoice.path.blank? %>
                <td>Not yet available</td>
              <% else %>
                <td><%= link_to 'download invoice', download_deposit_invoice_path(order.id), method: :post, class: 'btn btn-h-50' %></td>
              <% end -%>
            </tr>
            <tr>
              <td><%= order.id %></td>
              <td>Payment</td>
              <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
              <td><%= order.voyage.name %></td>

              <% if order.payment_invoice_link.blank? %>
                <td>Not yet available</td>
              <% else %>
                <td><%= link_to 'pay invoice', order.payment_invoice_link, class: 'btn btn-filled btn-h-50' %></td>
              <% end -%>

              <% if order.payment_invoice.path.blank? %>
                <td>Not yet available</td>
              <% else %>
                <td><%= link_to 'download invoice', download_payment_invoice_path(order.id), method: :post, class: 'btn btn-h-50' %></td>
              <% end -%>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>