<%= simple_form_for :order_item, remote: true, url: order_items_path, method: :post do |f| %>
  <%= f.hidden_field :productable_id, value: resource.id %>
  <%= f.hidden_field :productable_type, value: resource.class.name %>
  <div class="flex">
    <%= f.submit "add", class: "btn btn-filled pull-left" %>
    <%= f.input :qty, label: false, placeholder: "QTY" %>
  </div>
<% end -%>