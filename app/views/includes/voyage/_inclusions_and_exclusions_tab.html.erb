<div class="container">
  <%= render partial: "includes/alternating_horizontal_tiles", locals: { collection: @voyage.elaborate_inclusions } %>
  <h5 class="divider">
    <span>Inclusions / Exclusions</span>
  </h5>
  <div class="row">
    <div class="col-md-6 light-border-right">
      <h4 class="theme-header">
        Included in your Expedition
      </h4>
      <% @voyage.simple_inclusions.each do |inclusion| %>
        <span>- <%= inclusion.name %></span>
        <br>
      <% end -%>
    </div>
    <div class="col-md-6">
      <h4 class="theme-header">
        Not included in your Expedition
      </h4>
      <% @voyage.exclusions.each do |exclusion| %>
        <span>- <%= exclusion.name %></span>
        <br>
      <% end -%>
    </div>
  </div>
</div>
