<div class="image-slider slider-all-controls controls-inside col-centered">
  <ul class="slides">
    <% collection.each do |item| %>
      <li>
        <div class="image-caption hover-caption">
          <%= image_tag(item.image.url) %>
          <div class="caption" data-caption="<%= item.description %>"></div>
        </div>
      </li>
    <% end -%>
  </ul>
</div>