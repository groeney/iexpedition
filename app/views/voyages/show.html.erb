<section class="page-title page-title-2 image-bg overlay parallax">
  <div class="background-image-holder">
    <%= image_tag(@voyage.header_image.url, class: "background-image") %>
  </div>
  <div class="container" style="top: 70%;">
    <div class="row">
      <div class="col-md-6">
        <h3 class="uppercase mb0"><%= @voyage.name %></h3>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="tabs-container tabbed-content icon-tabs mt16">
        <ul class="tabs">
          <li class="active">
            <div class="tab__title">
                <i class="ti-info-alt icon"></i>
                <span>Overview</span>
            </div>
            <div class="tab__content voyage-overview-tab">
              <%= render "includes/voyage/overview_tab" %>
            </div>
          </li>
          <li>
            <div class="tab__title">
                <i class="ti-layers icon"></i>
                <span>Itinerary</span>
            </div>
            <div class="tab__content voyage-itinerary-tab">
              <%= render partial: "includes/voyage/itinerary_tab", locals: { voyage: @voyage } %>
            </div>
          </li>
          <li>
            <div class="tab__title">
                <i class="fa fa-compass fa-2x"></i>
                <span>Highlights & Activities</span>
            </div>
            <div class="tab__content voyage-activities-tab">
              <%= render "includes/voyage/highlights_and_activities_tab" %>
            </div>
          </li>
          <li>
            <div class="tab__title">
                <i class="ti-star icon"></i>
                <span>Inclusions</span>
            </div>
            <div class="tab__content voyage-inclusions-tab">
              <%= render "includes/voyage/inclusions_and_exclusions_tab" %>
            </div>
          </li>
          <li>
            <div class="tab__title">
                <i class="ti-map-alt icon"></i>
                <span>Map</span>
            </div>
            <div class="tab__content voyage-map-tab">
              <%= render "includes/voyage/map_tab" %>
            </div>
          </li>
          <li>
            <div class="tab__title">
                <i class="ti-gallery icon"></i>
                <span>Gallery</span>
            </div>
            <div class="tab__content voyage-gallery-tab">
              <%= render "includes/voyage/gallery_tab" %>
            </div>
          </li>
          <li>
            <div class="tab__title">
              <i class="fa fa-ship fa-2x"></i>
              <span>Vessel</span>
            </div>
            <div class="tab__content voyage-vessel-tab">
              <%= render partial: "includes/vessel_tab", locals: { ship: @voyage.ship, show_gallery: true } %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row mt72">
    <h5 class="divider">
      <span>Departure Dates & Cabins</span>
    </h5>
    <%= render partial: "includes/voyage/cabins_layout", locals: { voyage: @voyage, alternative_voyages: @voyage.alternative_voyages } %>
  </div>
</div>
