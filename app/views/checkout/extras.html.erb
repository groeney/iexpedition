<section class="cover" style="height:150px;background:#466a7e;">
  <div class="custom-container container mt16">
    <span>Home / Search & Filter / Voyage / Extras</span>
    <h2 style="font-weight: bolder;">Extras</h2>
  </div>
</section>

<section class="select_extras">
  <div class="container custom-container">
    <div class="row">
      <div class="col-lg-12">
        <div class="steps">
          <div class="short-line"></div>
          <div class="sipmle-step fill">
            <span>1. Select your cabin</span>
          </div>
          <div class="long-line"></div>
          <div class="sipmle-step fill">
            <span>2. Choose your extras</span>
          </div>
          <div class="long-line"></div>
          <div class="sipmle-step">
            <span>3. Confirm your reservation</span>
          </div>
          <div class="long-line"></div>
          <div class="sipmle-step">
            <span>4. Personal details & deposit payment</span>
          </div>
          <div class="short-line"></div>
        </div>
      </div>
    </div>
    <% collection = @order.voyage.activities.not_mandatory %>
    <% if collection.present? %>
    <h5 class="divider">
      <span>
        choose your extras
      </span>
    </h5>
    <%= render partial: "includes/alternating_horizontal_tiles", locals: { collection: collection } %>
    <% else %>
      <p class="msg text-center">This voyage has no available extras, please click Continue to proceed.</p>
    <% end %>
    <div class="row">
      <div class="col-sm-offset-9 col-sm-3 col-xs-offset-6 col-xs-6" >
      <a href="<%= checkout_cart_path %>" class="btn pull-right">Continue</a>
      </div>
    </div>
  </div>
</section>
